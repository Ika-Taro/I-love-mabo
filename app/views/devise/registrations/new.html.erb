<div class="full-page">
  
  
  <div class="container text-center position-absolute top-50 start-50 translate-middle">
      <div  class="container text-center my-5">
        <h1>Sign up</h1>
      </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="justify-content-center">
        <div class="container my-2">
          <div class="row">
            <div class="col"></div>
            <div class="col-6 form-floating">
              <%= f.text_field :nickname, autofocus: true,class: 'form-control',id: 'floatingInput', placeholder: ''  %>
              <label for="floatingInput">ニックネーム</label>
            </div>
          <div class="col"></div>
        </div>
      </div>
    
    
      <div class="justify-content-center">
        <div class="container my-2">
          <div class="row">
            <div class="col"></div>
            <div class="col-6 form-floating">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control',id: 'floatingInput', placeholder: '' %>
              <label for="floatingInput">メールアドレス</label>
            </div>
            <div class="col"></div>
          </div>
        </div>
    
      <%if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
      <% else %>
        <div class="container my-2">
          <%# <% @minimum_password_length %>
          <div class="row">
            <div class="col"></div>
            <div class="col-6 form-floating">
              <%= f.password_field :password, autocomplete: "new-password",class: 'form-control',id: 'floatingPassword', placeholder: ''%>
              <label for="floatingPassword">パスワード(<%= @minimum_password_length %> characters minimum)</label>
            </div>
            <div class="col"></div>
          </div>
        </div>
    
        <div class="container my-2">
          <div class="row">
            <div class="col"></div>
            <div class="col-6 form-floating">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control',id: 'floatingPassword', placeholder: 'password'%>
              <label for="floatingPassword">パスワード(確認用)</label>
            </div>
            <div class="col"></div>
          </div>
        </div>
        </div>
      <% end %>
    
      <div class="actions my-2">
        <%= f.submit nil, class: 'btn btn-secondary rounded-pill',value: "Sign up" %>
      </div>
      <div class="container my-2">
        <button type="button" class="justify-content-center btn btn-outline-secondary rounded-pill">
          <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'text-secondary text-decoration-none'%>
        </button>
      </div>
    <% end %>
  </div>

  
</div>

<div class="container text-center position-absolute bottom-0 start-50 translate-middle">
    <%= render "devise/shared/links" %>
</div>