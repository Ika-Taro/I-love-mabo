  <div class="full-page">
    <div class="container text-center position-absolute top-50 start-50 translate-middle">
        <div  class="container text-center my-5">
          <h1 class="display-1 text-light">Sign up</h1>
        </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
    
        <div class="justify-content-center">
          <div class="container my-2">
            <div class="row">
              <div class="col"></div>
              <div class="col-10 col-md-6 form-floating">
                <%= f.text_field :nickname, autofocus: true,class: 'form-control',id: 'floatingInput', placeholder: 'ニックネーム'  %>
                <label for="floatingInput">ニックネーム</label>
              </div>
            <div class="col"></div>
          </div>
        </div>
    
    
        <div class="justify-content-center">
          <div class="container my-2">
            <div class="row">
              <div class="col"></div>
              <div class="col-10 col-md-6 form-floating">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control',id: 'floatingInput', placeholder: 'メールアドレス' %>
                <label for="floatingInput">メールアドレス</label>
              </div>
              <div class="col"></div>
            </div>
          </div>
        </div>
    
        <%if @sns_id.present? %>
          <%= hidden_field_tag :sns_auth, true %>
        <% else %>
          <div class="container my-2">
            <div class="row">
              <div class="col"></div>
              <div class="col-10 col-md-6 form-floating">
                <%= f.password_field :password, autocomplete: "new-password",class: 'form-control',id: 'floatingPassword', placeholder: 'パスワード'%>
                <label for="floatingPassword">パスワード(<%= @minimum_password_length %>文字以上)</label>
              </div>
              <div class="col"></div>
            </div>
          </div>
    
          <div class="container my-2">
            <div class="row">
              <div class="col"></div>
              <div class="col-10 col-md-6 form-floating">
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control',id: 'floatingPassword', placeholder: 'password'%>
                <label for="floatingPassword">パスワード(確認用)</label>
              </div>
              <div class="col"></div>
            </div>
          </div>
          </div>
        <% end %>
    
        <div class="actions my-2">
          <%= f.submit nil, class: 'btn btn-light rounded-pill',value: "Sign up" %>
        </div>
        <div class="container my-2">
          <button type="button" class="justify-content-center btn btn-outline-light rounded-pill">
            <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'text-light text-decoration-none'%>
          </button>
        </div>
              <a class="btn btn-outline-light rounded-pill" href="/" role="button">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-door-open" viewBox="0 0 16 16">
            <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z"/>
            <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117zM11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5zM4 1.934V15h6V1.077l-6 .857z"/>
          </svg>
        </a>
      <% end %>
    </div>
    
    <div class="container text-center position-absolute bottom-0 start-50 translate-middle">
      <%= render "devise/shared/links" %>
    </div>
  </div>