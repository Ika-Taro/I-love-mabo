  <%= f.collection_select(:soup_id, Soup.all, :id, :name, {} ) %>
  <%= f.collection_select(:chili_pepper_id, ChiliPepper.all, :id, :name, {} ) %>
  <%= f.collection_select(:oil_id, Oil.all, :id, :name, {} ) %>
  <%= f.collection_select(:minced_meat_id, MincedMeat.all, :id, :name, {} ) %>
  <%= f.collection_select(:negi_id, Negi.all, :id, :name, {} ) %>
  <%= f.collection_select(:tofu_id, Tofu.all, :id, :name, {} ) %>
  <%= f.collection_select(:garlic_id, Garlic.all, :id, :name, {} ) %>
  <%= f.collection_select(:ginger_id, Ginger.all, :id, :name, {} ) %>
  <%= f.collection_select(:huajiao_id, Huajiao.all, :id, :name, {} ) %>

  <%= f.text_area :explanatory_note, placeholder:"こだわりを自由に記入してください", maxlength:"500" %>

  <%= f.submit "出品する" %>
