  <%= f.collection_select(:touban_id, Touban.all, :id, :name, {} ) %>
  <%= f.collection_select(:touchi_id, Touchi.all, :id, :name, {} ) %>
  <%= f.collection_select(:tenmen_id, Tenmen.all, :id, :name, {} ) %>
  <%= f.collection_select(:soy_sauce_id, SoySauce.all, :id, :name, {} ) %>
