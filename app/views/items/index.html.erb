<% @items.each do |item| %>

<%= link_to item_path(item.id) do %>
  <% if item.image.blank?%>
    <%=  image_tag "tofu.jpeg" %>
    <% else %>
    <%=  image_tag (item.image) %>
  <% end %>
<% end %>


  <%= item.user.nickname %>
  <%= l item.created_at %>


<% end %>

